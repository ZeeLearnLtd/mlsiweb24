<style type="text/css">
    @@media (min-width:992px){
        .InsideBanner .EnquiryForm {
            max-width: 500px;
            position: absolute;
            top: 15px;right:30px;
            background: #fff;
            padding: 10px;
            border:0;
        }
    }
    .InsideBanner .EnquiryForm .Inputgroup {
        margin: 20px 0 0;
    }
    .InsideBanner .EnquiryForm .Inputgroup > label {
        font-weight: 400;
    }
    .Inn {
        background: #f5f5f5;
        margin:0 0 30px;
        padding:15px; 
        border-radius:10px;
    }
    /*Error Message*/
    input .ng-dirty.ng-invalid, input.ng-invalid.ng-touched {
        border-bottom: 1px solid red;
    }

    select.ng-dirty.ng-invalid,
    select.ng-invalid.ng-touched {
        border-bottom: 1px solid red;
    }

    textarea.ng-dirty.ng-invalid,
    textarea.ng-invalid.ng-touched {
        border-bottom: 1px solid red;
    }

    .error-message {
        color: red;
        display: block;
    }
    /*End Message*/
</style>

