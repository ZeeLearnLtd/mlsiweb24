@{
    ViewBag.Title = "Enquire_Now";
}

    <div class="InsideBanner">
        <img src="~/Images/InnsideBanner/Admission/Enquiry-now.jpg" alt="" class="img-fluid" />
        <div class="EnquiryForm" ng-controller="EnquiryCtrl" ng-init="Enq.Type='P';Enq.Source='Website';SetCaptcha('@ViewBag.CaptchaStr');">
            <h5 class="header5 text-center mt-0 mb-2">
                School Admission Enquiry Form
            </h5>
            <form name="EnquiryForm" novalidate>
                <div class="row">
                    <div class="col-md-6">
                        <div class="Inputgroup">
                            <input type="text" ng-model="Enq.FirstName" required />
                            <label>Parent's Name</label>
                            <span class="inputbar"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="Inputgroup">
                            <input type="text" ng-model="Enq.ChildName" required />
                            <label>Student's Name</label>
                            <span class="inputbar"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="Inputgroup">
                            <input type="text" ng-model="Enq.Age" minlength="1" maxlength="2" numbers-only required />
                            <label>Student Age</label>
                            <span class="inputbar"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="Inputgroup">
                            <input type="text" ng-model="Enq.Mobile" minlength="10" maxlength="10" numbers-only required>
                            <label>Mobile No</label>
                            <span class="inputbar"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="Inputgroup">
                            <input type="email" ng-model="Enq.Email" required />
                            <label>Enter a valid email address</label>
                            <span class="inputbar"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="Inputgroup">
                            <select name="grade" id="grade" type="text" ng-model="Enq.class" required>
                                <option value="" selected="selected"></option>
                                <option value="Playgroup">Playgroup</option>
                                <option value="Nursery">Nursery</option>
                                <option value="Junior KG">Junior KG</option>
                                <option value="Senior KG">Senior KG</option>
                                <option value="Class I">Class I</option>
                                <option value="Class II">Class II</option>
                                <option value="Class III">Class III</option>
                                <option value="Class IV">Class IV</option>
                                <option value="Class V">Class V</option>
                                <option value="Class VI">Class VI</option>
                                <option value="Class VII">Class VII</option>
                                <option value="Class VII">Class VIII</option>
                                <option value="Class IX">Class IX</option>
                                <option value="Class X">Class X</option>
                                <option value="Class XI">Class XI</option>
                            </select>
                            <label>Enrollment In</label>
                            <span class="inputbar"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <span style="background-color: lightgreen; padding: 5px 15px; font-size: 1.1rem; line-height:normal; display: inline-block;">{{CaptchaStr}}</span>
                    </div>
                    <div class="col-6">
                        <input class="form-control" id="6_letters_code" name="6_letters_code" type="text" ng-model="EnteredCaptcha" />
                        <span style="color:red" ng-show="CaptchaMsg">Invalid Captcha</span>
                    </div>
                </div>
                <div class="mt-2">
                    <input id="chkAgree1" name="chkAgree" type="checkbox" ng-model="chkAgree" ng-change="ChangeClass();" style="width: 18px; height: 18px;" />
                    <label style="font-weight:normal;"><span class="mandatory">*</span>Would you like to receive updates regarding MLSI.</label>
                </div>
                <div class="text-center mt-1">
                    <input type="button" name="" id="btnSubmit" value="Submit" class="btn btn-first btn-rounded" ng-click="MLSISubmit();" />
                </div>
            </form>
        </div>
    </div>
