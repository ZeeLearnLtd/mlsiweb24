
@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
  var dt = ViewBag.PageData;
}

@if (ViewBag.blogtitle == null)
{
  <div class="InsideBanner">
    <img src="~/Images/InnsideBanner/InnsideBanner.jpg" alt="" class="img-fluid" />
  </div>
  <section>
    <div class="container" ng-controller="NewsAndEventsCtrl" ng-init="Type='Blog';GetNewsAndEvents()">
      <div class="pageheading">
        <h1>
          Blog
        </h1>
      </div>
      <div class="row">
        <div class="col-md-8 col-lg-8">
          <div class="events-blogs-box" ng-repeat="News in NewsAndEventsData">
            <div class="img" >
              <figure class="image" ng-repeat="dt in getjson(News.allfiles)">
                <a href="">
                  @*<img src="{{News.MainImagePath}}" alt="" />*@
                  <img src="{{dt.url}}" alt="{{dt.filename}}"/>
                </a>
              </figure>
            </div>
            <div class="content">
              <ul class="post-info clearfix">
                <li><i class="fa fa-calendar"></i>{{News.PublishedDate}},</li>
              </ul>
              <h2>
                {{News.Title}}
                @*Student-Led Conference*@

              </h2>
              <p>
                {{News.Short}}

                @*The Student-Led Conference (SLC) at MLSI is one of the events which our teachers and students take immense pride in. Our very first virtual SLC was celebrated on 5th February 21. It was a time when our students encouraged to exercise Learner Agency – through voice, choice and ownership of their…*@
              </p>
              <div class="link">
                @*<a data-fancybox="Videogallery" href="#divblog{{Id}}" data-transition-effect="tube">
                      <i class="fa fa-arrow-right"></i><span>Read More</span>
                  </a>*@
                <a href="/blog/{{News.LinkUrl}}"><i class="fa fa-arrow-right"></i><span>Read More</span></a>
              </div>
              <div id="divblog{{Id}}" style="display:none">
                <div ng-bind-html="News.Long|trustAsHtml">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-lg-4">
          <div class="sidebar">
            <div class="sidebar-categories">
              <div class="widget-title">
                <h3>Recent Posts</h3>
              </div>
              <div class="widget-content">
                <ul class="categories-list clearfix">
                  <li ng-repeat="News in NewsAndEventsData"><a data-fancybox="Videogallery" href="#divblog{{Id}}" data-transition-effect="tube">{{News.Title}}</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
}

@if (ViewBag.blogtitle != null)
{
  <section>
    <div class="row">
      <div class="col-md-12">

        <div class="pancil_img_content mt-4">

          @foreach (var item in @dt.files)
          {
            if (item.type == "OtherFiles")
            {
              <img src=@item.url loading="lazy" width="100%" height="100%" class="img-responsive" alt=@item.filename>
            }
            else
            {
              <img src="" loading="lazy" width="100%" height="100%" class="img-responsive" alt=@item.filename>
            }
            @*<img src=@dt.files[1].url loading="lazy" width="100%" height="100%" class="img-responsive" alt=@dt.files[1].filename>*@
          }
          <div class="left_div">
            <div class="title text-left w-100">@dt.MetaTitle</div>
          </div>
          <div class="education_content mt-4">
            <div>@dt.MetaKeyword</div>
            <div>@dt.dateCreated</div>
          </div>
          <div class="text_para mt-3">
            <p>@dt.MetaDescription</p>
          </div>
        </div>

        <div class="text_para mt-3">
          @*<p [innerHTML]="blogdetails.long1"></p>*@
          <p>
            @Html.Raw(@dt.LongDescription)
            @*@(new HtmlString(data.long1.ToString()))*@
          </p>
        </div>

      </div>
    </div>
    <section id="blog">
      <div class="mainDiv6">
        <div class="blogsContent">
          <div class="ball_pen_box">
            <div class="bluePencil">
              <img src="~/Images/microsite/partner_kidzee/img/blue_pancile.png" width="65px" height="95px" alt="">
            </div>
            <div class="faqBall">
              <img src="~/Images/microsite/partner_kidzee/img/orange_ball.png" width="95px" height="95px" alt="">
            </div>
          </div>
          <section>
            <div class="blogsDiv">
              <div class="title text-center border-around">Blogs</div>
              <div class="row mt-5 ">
                @foreach (var blog in dt?.blog)
                {
                <div class="col-4 card">
                  <div>@blog.FromDate</div>
                  @if (blog.files != null)
                  {
                    foreach (var item1 in blog.files)
                    {
                      if (item1.type == "Logo")
                      {
                        <img src=@item1.url loading="lazy" width="100%" height="100%" class="img-responsive" alt=@item1.filename>
                      }
                      else
                      {
                        <img src="" loading="lazy" width="100%" height="100%" class="img-responsive" alt=@item1.filename>
                      }
                      @*<img src=@blog.files[0].url loading="lazy" class="img" alt=@blog.files[0].filename>*@
                    }
                  }
                  <div>@blog.Title</div>
                  <div>@blog.Short</div>
                  <a href="/blog/@blog.slug">Read More</a>
                </div>
                }
              </div>
            </div>
          </section>
        </div>
      </div>
    </section>
  </section>
}

