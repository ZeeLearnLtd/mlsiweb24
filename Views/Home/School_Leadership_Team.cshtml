        <div class="InsideBlock" id="MYPCoordinator">
            <div class="InsideBlockBody">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="AcademicTeamPhoto">
                            <a href="~/Images/Saolee-Roy.jpeg" data-fancybox>
